@page
@model HostelManagement.Pages.Accounts.DeleteModel

@{
    var activeNav = "accounts-nav";
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="align-items-center">
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.UserPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.UserPassword)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.RoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.RoleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Status)
        </dt>
        <dd class="col-sm-10">
            @{
                string status;
                if (Model.Account.Status == 1) status = "Active";
                else status = "Inactive";
            }
            <div> @status </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.Dob)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Dob)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.ProfilePicUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.ProfilePicUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.IdCardNumberNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.IdCardNumberNavigation.IdCardNumber)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Account.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $('#@activeNav').addClass('active');
    </script>
}