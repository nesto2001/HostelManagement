@page
@model HostelManagement.Pages.Accounts.ForgotPasswordModel
@{
    var hidden = false;
    if (Model.message == null) hidden = true;
    bool sent = false;
    if (Model.messageCode != null) sent = true;
    bool notsent = !sent;
}
<h1 class="text-center" style="margin-bottom:50px; margin-top: 50px">RESET PASSWORD</h1>
<div hidden="@hidden" class="text-center">
    <span class="text-danger">@Model.message</span>
</div>
<div class="container border h-100 d-flex align-items-center justify-content-center" style="padding: 20px; width: 500px">
    <form method="post" asp-page-handler="SendCode" hidden="@sent">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row text-center">
            <div class="col-3">
                <label>Email</label>
            </div>
            <div class="col-9">
                <input type="email" asp-for="Account.UserEmail" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Account.UserEmail"></span>
        </div>
        <div class="form-group row">
            <div class="col-12 text-center">
                <input type="submit" class="btn btn-primary" value="SEND CODE" />
            </div>
        </div>
    </form>


    <form method="post" asp-page-handler="Change" hidden="@notsent">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row text-center">
            <div class="col-3">
                <label>Your Email</label>
            </div>
            <div class="col-9">
                <input type="email" asp-for="Account.UserEmail" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Account.UserEmail"></span>
        </div>
        <div class="form-group row text-center">
            <div class="col-3">
                <label>CODE</label>
            </div>
            <div class="col-9">
                <input asp-for="Code" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Code"></span>
        </div>
        <div class="form-group row">
            <div class="col-12 text-center">
                <input type="submit" class="btn btn-primary" value="RESET PASSWORD" />
            </div>
        </div>

    </form>

</div>
<p id="emailHelp" class="form-text text-center">
    Dont have an ancount?
    <a href="/Accounts/Register" class="text-decoration-none"><b>Register here</b></a>
</p>
