@page
@model HostelManagement.Pages.Bills.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bill.BillId" />
            <div class="form-group">
                <label asp-for="Bill.CreatedDate" class="control-label"></label>
                <input asp-for="Bill.CreatedDate" class="form-control" />
                <span asp-validation-for="Bill.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.DueDate" class="control-label"></label>
                <input asp-for="Bill.DueDate" class="form-control" />
                <span asp-validation-for="Bill.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.RentId" class="control-label"></label>
                <select asp-for="Bill.RentId" class="form-control" asp-items="ViewBag.RentId"></select>
                <span asp-validation-for="Bill.RentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.RoomId" class="control-label"></label>
                <select asp-for="Bill.RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="Bill.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.StartRentDate" class="control-label"></label>
                <select asp-for="Bill.StartRentDate" class="form-control" asp-items="ViewBag.StartRentDate"></select>
                <span asp-validation-for="Bill.StartRentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.EndRentDate" class="control-label"></label>
                <select asp-for="Bill.EndRentDate" class="form-control" asp-items="ViewBag.EndRentDate"></select>
                <span asp-validation-for="Bill.EndRentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
