                                    <div class="btn-card-action btn-card-edit">
                                        <a asp-page="./Edit" asp-route-id="@item.HostelId">
                                            <i class='bx bx-edit'></i>
                                        </a>
                                    </div>

                                    
                                        var name = item.HostelName;
                                    
